<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="200.0" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tools.ToolsController">
    <children>
        <VBox fx:id="vBox">
            <children>
                <Label text="3D object" />
                <ComboBox fx:id="shapeBox">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Cube" />
                        <String fx:value="Cylinder" />
                        <String fx:value="Sphere" />
                        <String fx:value="Pyramid" />
                    </FXCollections>
                </items>
                </ComboBox>
                <Label fx:id="xLabel" text="X position" />
                <TextField fx:id="xField" prefWidth="300"/>
                <Label fx:id="yLabel" text="Y position" />
                <TextField fx:id="yField" prefWidth="300"/>
                <Label fx:id="zLabel" text="Z position" />
                <TextField fx:id="zField" prefWidth="300"/>
                <Button fx:id="updateButton" text="Update" onAction="#updateAction"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
