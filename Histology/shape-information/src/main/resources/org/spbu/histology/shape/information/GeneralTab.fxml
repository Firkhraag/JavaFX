<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>

<VBox id="generalBox" xmlns:fx="http://javafx.com/fxml" fx:controller="org.spbu.histology.shape.information.GeneralTabController">
    <children>
        <GridPane fx:id="gridPane">
                            <Label fx:id="nameLabel" text="Name" 
                                GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="nameField" prefWidth="300"
                                GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label fx:id="diffuseColorLabel" text="Diffuse Color" 
                                GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <ColorPicker fx:id="diffuseColorPicker" 
                                GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <value>
                                    <Color blue="0.0" green="0.0" red="1.0" />
                                </value>
                            </ColorPicker>
                            <Label fx:id="specularColorLabel" text="Specular Color" 
                                GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <ColorPicker fx:id="specularColorPicker" 
                                GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <value>
                                    <Color blue="0.0" green="0.0" red="1.0" />
                                </value>
                            </ColorPicker>
                            <Button fx:id="createButton" text="Create" 
                                    GridPane.columnIndex="0" GridPane.rowIndex="3"
                                    onAction="#buttonAction"/>
                        </GridPane>
    </children>
</VBox>
