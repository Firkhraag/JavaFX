<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>

<TabPane fx:id="tabPane" fx:controller="org.spbu.histology.shape.information.MainController" 
         xmlns:fx="http://javafx.com/fxml" tabClosingPolicy="UNAVAILABLE">
    <tabs>
        <Tab fx:id="viewTab" text="3D View">
        </Tab>
        <Tab fx:id="facetTab" text="Facets">
            <fx:include fx:id="FacetTab" source="FacetTab.fxml"/>
        </Tab>
        <Tab fx:id="generalTab" text="General">
            <fx:include fx:id="GeneralTab" source="GeneralTab.fxml"/>
        </Tab>
    </tabs>
</TabPane>